<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkPrimary" >

    <TextView
        android:id="@+id/title_impressum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/impressum"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/TextIcon"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/bar"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/title_impressum"
        android:layout_margin="5dp"
        android:background="@color/TextIcon" />

    <TextView
        android:id="@+id/impressumContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/bar"
        android:layout_margin="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/impressumContent"
        android:textColor="@color/TextIcon" />

</RelativeLayout>