<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="guepardoapps.stopme">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="guepardoapps.stopme.activities.ActivityBoot"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="guepardoapps.stopme.activities.ActivityImpressum" />
        <activity android:name="guepardoapps.stopme.activities.ActivityMain" />
        <activity android:name="guepardoapps.stopme.activities.ActivitySettings" />

        <service
            android:name="guepardoapps.stopme.service.FloatingService"
            android:enabled="true" />
    </application>

</manifest>
